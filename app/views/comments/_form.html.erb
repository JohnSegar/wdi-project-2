<%= form_for(:comment, url: comments_path(commentable_type: commentable.class.to_s.underscore, commentable_id: commentable.id)) do |f| %>

<div class='row'>
  <%= f.text_area :comment, placeholder: "Write a Comment" %>
  <%= f.submit "Comment!" %>
</div>

<div class="field">
  <!--  <%= f.label :image %><br /> -->
  <%= f.file_field :image %>
</div>

    

<% end %>